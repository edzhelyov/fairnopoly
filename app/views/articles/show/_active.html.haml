.User.User--teaser
  .User-info
    = render partial: '/shared/profile_img', locals: {user: resource.seller, show_title: true}
  .User-accordion.Accordion
    = accordion_item "other_products", :number => seller_articles.count, :title => t('article.titles.other-products') do
      = render :partial=>'/shared/list_articles_small', :locals=>{ :articles=> seller_articles, :paginate => true, :list_class=>"span4", :anchor=> "other_products"}
  .User-accordion.Accordion
    .Accordion-item
      %a.Accordion-header
        %i.icon-arrow
        %span.content Beispiel Markup mit langem Titel
        %span.number 15
      .Accordion-content.ui-accordion-content.ui-helper-reset.ui-widget-content.ui-corner-bottom
        %p Lorem ipsum

.Related
  - alternative = find_fair_alternative_to resource
  .Article.Article--related
    %h3.Articles-related-title= t('article.show.alternative')
    %i.icon-helper
    - if alternative.present?
      = render :partial=>'/shared/show_article', :locals=>{ :article=> article}
    - else
      %p.Helper-text
        = t('article.show.no_alternative')


  .Accordion.Accordion--full
    - if policy(resource).report?
      = accordion_item "report" do
        = render :partial=>'/shared/feedback', :locals=>{ :type=> :report_article}


